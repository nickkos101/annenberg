<section>
    <div class="container">
        <div class="grid">
            {% for product in collections.all-paintings.products %}
            <div class="product-item">
                <div class="product-image">
                    <img src="{{ product.featured_image | img_url: '270x270', crop: 'center', scale: 2 }}" alt="{{ product.title | escape }}">
                </div>
                <h3 class="product-title">{{ product.title }}</h3>
                <p>Call for Pricing</p>
                <a class="btn" href="{{ product.url }}">Select Options</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>