{% paginate collections.all-paintings.products by 20 %}
<section>
    <div class="container">
        <div class="grid">
            {% for product in collections.all-paintings.products limit: 20 %}
            {% render 'product-item' product : product %}
            {% endfor %}
        </div>
    </div>
<div class="pagination">
  {% if paginate.pages > 1 %}
  {{ paginate | default_pagination }}
  {% endif %}
</div>
{% endpaginate %}
</section>