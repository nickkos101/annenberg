<section>
    <div class="container">
        <div class="grid">
            {% for product in collections.all-paintings.products %}
            <div class="product-item">
                <div class="product-image">
                    <img src="{{ product.featured_image | img_url: '270x270', crop: 'center', scale: 2 }}" alt="{{ product.title | escape }}">
                </div>
                <p class="product-collections">
                    {% for collection in product.collections limit: 3 %}
                    {{ collection.title }}
                    {% if forloop.last != true %},{% endif %}
                    {% endfor %}
                </p>
                <h3 class="product-title">{{ product.title }}</h3>
                <p class="product-price">Call for Pricing</p>
                <a class="btn" href="{{ product.url }}">Select Options</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>