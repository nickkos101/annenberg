<div class="product-item">
  <div class="product-image">
    <a href="{{ product.url }}">
      <img src="{{ product.featured_image | img_url: '270x270', crop: 'center', scale: 2 }}" data-src="{{ product.featured_image | img_url: '270x270', crop: 'center', scale: 2 }}" {% if product.images[1] %} data-hover="{{ product.images[1] | img_url: '270x270', crop: 'center', scale: 2 }}" {% endif %} alt="{{ product.title | escape }}" loading="lazy">
      <span class="water-mark">AA</span>
    </a>
  </div>
  <p class="product-collections">
    {% for collection in product.collections limit: 3 %}
    {{ collection.title }}
    {% if forloop.last != true %},{% endif %}
    {% endfor %}
  </p>
  <h3 class="product-title"><a href="{{ product.url }}">{{ product.title }}</a></h3>
  <p class="product-price"><i class="fas fa-paint-brush"></i> <span>Form:</span> {{ product.metafields.my_fields.form }}</p>
  <!-- <div class="product-detail">
    <p><small><i class="far fa-calendar"></i> Date: {{ product.metafields.my_fields.date }}</small></p>
    <p><small><i class="fas fa-ruler"></i> Dimensions: {{ product.metafields.my_fields.dimensions }}</small></p>
  </div> -->
  <!-- <a class="btn" href="{{ product.url }}">Select Options</a> -->
</div>