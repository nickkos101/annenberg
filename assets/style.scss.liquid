/* CSS stykes go in here */

body {
    margin: 0;
    padding: 0;
    font-family: 'Open Sans', sans-serif;
}

header {
    background-color: #fff;
    padding: 15px 0;
}

header .logo {
    display: inline-block;
}

header form {
    display: inline-block;
}

header form input[type=search] {
    font-size: 16px;
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 5%);
    border-radius: 4px;
}

header nav {
    padding: 15px 0;
    background-color: #222;
    text-transform: uppercase;
    font-size: 20px;
}

header nav ul {
    margin: 0;
    padding: 0;
}

header nav li {
    margin: 0 15px;
    display: inline-block;
    vertical-align: top;

    &:first-of-type {
        margin-left: 0;
    }

    &:last-of-type {
        margin-right: 0;
    }
}

header nav a {
    color: #fff;
    text-decoration: none;
}

.container {
    max-width: 1170px;
    margin: 0 auto;
}