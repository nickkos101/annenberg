@mixin mq($media-query) {
    $mq-xl: "(min-width: 1201px)"; 	// red
    $mq-lg: "(max-width: 1200px)"; 	// orange
    $mq-md: "(max-width: 992px)"; 	// yellow
    $mq-sm: "(max-width: 768px)"; 	// blue
    $mq-xs: "(max-width: 480px)"; 	// green
    $mq-xxs: "(max-width: 320px)"; 	// purple
    $mq-mad: "(max-width: 740px)"; 	// mobile ads
    $mq-sc: "(max-width: 1440px)";  // below container width
    
    @if $media-query == xxs {
        @media #{$mq-xxs} {
            @content;
        }
    } @else if $media-query == xs {
        @media #{$mq-xs} {
            @content;
        }
    } @else if $media-query == sm {
        @media #{$mq-sm} {
            @content;
        }
    } @else if $media-query == md {
        @media #{$mq-md} {
            @content;
        }
    } @else if $media-query == lg {
        @media #{$mq-lg} {
            @content;
        }
    } @else if $media-query == xl {
        @media #{$mq-xl} {
            @content;
        }
    } @else if $media-query == mad {
        @media #{$mq-mad} {
            @content;
        }
    } @else if $media-query == sc {
        @media #{$mq-sc} {
            @content;
        }
    }
}

* {
    box-sizing: border-box;
}

body {
    margin: 0;
    padding: 0;
    // font-family: 'Bitter', serif;
    font-family: 'Open Sans', sans-serif;
    background-color: #f7f7f7;
}

h1,h2,h3,h4,h5,h6 {
    font-family: 'Bitter', serif;
    // font-family: 'Open Sans', sans-serif;
}

img {
    max-width: 100%;
    height: auto;
}

header {
    background-color: #fff;
    padding-top: 15px;
    
    @include mq(sm) {
        padding: 10px 0;
        text-align: center;
        position: relative;
    }
}

header #mobile-menu-btn {
    display: none;
    @include mq(sm) {
        display: block;
        position: absolute;
        left: 20px;
        top: 28px;
        font-size: 27px;
    }
}

header .logo {
    display: inline-block;
}

header .logo img {
    width: auto;
    height: 55px;
}

header form {
    position: relative;
    left: 45px;
    top: -20px;
    display: inline-block;
    max-width: 70%;
    width: 100%;
    
    @include mq(sm) {
        display: none;
    }
}

header form input[type=search] {
    font-size: 16px;
    color: #222;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    border-radius: 4px;
    max-width: 92%;
    width: 100%;
    padding: 12px 10px;
    border: 1px solid #c1c1c1;
    background-color: #f7f7f7;
}

header .search-btn {
    font-size: 16px;
    vertical-align: middle;
    background: transparent;
    color: #000;
    border: none;
}

header nav {
    padding: 15px 0;
    background-color: #222;
    text-transform: uppercase;
    font-size: 20px;
    
    @include mq(sm) {
        display: none;
        left: 0;
        top: 0;
        background-color: #fff;
        text-align: left;
        
        ul li {
            display: block;
            margin: 0;
            padding-bottom: 8px;
            
            a {
                color: #222;
            }
            
            ul {
                position: relative;
                top: initial;
                left: initial;
                display: block;
                padding: 0;
                padding-left: 10px;
                padding-top: 8px;
            }
        }
    }
}

header nav ul {
    margin: 0;
    padding: 0;
}

header nav li {
    position: relative;
    margin: 0 15px;
    display: inline-block;
    vertical-align: top;
    
    &:first-of-type {
        margin-left: 0;
    }
    
    &:last-of-type {
        margin-right: 0;
    }
    
    &:hover {
        ul {
            display: block;
        }
    }
    
    ul {
        z-index: 999;
        top: -1;
        left: -12px;
        position: absolute;
        display: none;
        background-color: #fff;
        text-align: left;
        padding: 8px 12px;
        min-width: 240px;
        li {
            display: block;
            padding-bottom: 8px;
            margin: 0;
            a {
                color: #222;
            }
            
            &:last-of-type {
                padding-bottom: 0;
            }
        }
    }
}

header nav a {
    color: #fff;
    text-decoration: none;
}

.container {
    max-width: 1170px;
    margin: 0 auto;
    
    @include mq(sm) {
        padding: 0 15px;
    }
}

.light {
    background-color: #fff;
}

.box {
    padding: 15px 0;
    
    &:first-of-type {
        padding-top: 45px;
    }
}

.text-center {
    text-align: center;
}

.text-left {
    text-align: left;
}

.text-right {
    text-align: right;
}


/* Product Grid */

.product-item {
    position: relative;
    z-index: 9999999;
    text-align: center;
    margin: 10px 0;
    background-color: #fff;
    border: 1px solid #c1c1c1;
    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    
    &:hover {
        animation: pulse 500ms infinite ease-in-out alternate;
    }
    
    .product-collections {
        font-size: 12px;
        margin-bottom: 5px;
        color: #989898;
    }
    
    .product-image {
        width: 300px;
        height: 300px;
        align-items: center;
        display: flex;
        justify-content: center;
        background-color: #fff;
        img {
            // border: 4px solid #fff;
            border-bottom: 1px solid #c1c1c1;
            max-height: 300px;
        }

        a {
            position: relative;
        }

        .water-mark {
            // bottom: 0;
            // right: 0;
            font-size: 3em;
        }
        
        @include mq(sm) {
            width: 100%;
            height: auto;
        }
    }
    
    .product-title {
        margin: 0;
        margin-bottom: 10px;
        font-weight: normal;
        
        a {
            color: #000;
            text-decoration: none;
        }
    }
    
    .product-detail {
        background-color: #fff;
        color:#989898;
        text-align: left;
        margin: 0px;
        padding: 4px 6px;
        border: 1px solid #c1c1c1;
        
        p {
            margin: 0;
        }
        
        i {
            margin-right: 10px;
            width: 2em;
            color: #222;
        }
    }
    
    .product-price {
        font-size: 14px;
        margin-top: 5px;
        color: #989898;
    }
    
    &:hover {
        .btn {
            transform:scale(1);
        }
    }
    
    .btn {
        transform:scale(0);
        display: block;
        background-color: #3bb54a;
        color: #fff;
        text-decoration: none;
        padding: 8px 12px;
        border-radius: 4px;
    }
}

/* Single Product Page */

.single-product-page {
    
    .product-title {
        margin: 0;
        font-weight: normal;
        
        a {
            color: #000;
            text-decoration: none;
        }
    }
    
    .product-images, .product-content {
        padding: 25px 0;
        @include mq(xs) {
            padding: 5px 0;
        }
    }
    
    
    
    .product-images {
        position: relative;
        overflow: hidden;
        
        img {
            width: 100%;
            height: auto;
            border: 4px solid #fff;
        }
        
        a {
            position: relative;
        }
        
        .swiper-slide {
            width: 100%;
            height: auto;
            align-items: center;
            display: flex;
            justify-content: center;
            
            img {
                width: 100%;
                height: auto;
                max-width: initial;
                max-height: initial;
            }
        }
        
        .swiper-pagination {
            padding: 10px 15px;
            // background-color: transparent;
        }
        
        @include mq(sm) {
            padding-top: 25px;
        }
    }
    
    .product-content {
        
        .product-details {
            font-size: 14px;
            list-style: none;
            margin: 10px 0;
            padding: 0;
            color: #989898;
            li {
                border-bottom: 1px solid #989898;
                padding: 6px 0;
                i {
                    padding-left: 5px;
                    padding-right: 10px;
                    width: 2em;
                    color: #222;
                }
                span {
                    color: #222;
                }
            }
        }
        
        label {
            display: block;
            font-size: 12px;
            padding: 5px 0;
        }
        select {
            font-size: 16px;
            max-width: 300px;
            width: 100%;
            padding: 10px 5px;
            
            @include mq(sm) {
                max-width: 100%;
            }
        }
        
        .btn {
            display: inline-block;
            width: 100%;
            max-width: 300px;
            font-size: 22px;
            background-color: #3bb54a;
            color: #fff;
            text-decoration: none;
            padding: 12px 45px;
            border-radius: 4px;
            margin: 15px 0;
            
            @include mq(sm) {
                max-width: 100%;
            }
        }
    }
    
    .product-slerp {
        text-align: center;
        border-top: 1px solid #f7f7f7;
        border-bottom: 1px solid #f7f7f7;
        padding: 5px 0;
        font-size: 14px;
        text-transform: uppercase;
        color: #989898;
        
        a {
            color: #989898;
            text-decoration: none;
        }
        
        strong {
            color: #222;
            padding-left: 10px;
            &:first-of-type {
                padding-left: 0;
            }
        }
    }
    
}


.sort-by {
    margin: 10px 0;
    font-size: 16px;
    padding: 10px 5px;
}

.collection-title{
    margin: 5px 0;
}


/* Grid */

.grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 1fr;
    grid-column-gap: 15px;
    grid-row-gap: 15px;
    
    @include mq(sm) {
        grid-template-columns: repeat(2, 1fr);
    }
}

.grid-half {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: 1fr;
    grid-column-gap: 15px;
    grid-row-gap: 15px;
    
    @include mq(sm) {
        grid-template-columns: repeat(1, 1fr);
    }
}


/* Swiper */

.swiper {
    width: 100%;
    padding-top: 50px;
    padding-bottom: 90px;
}

.swiper-slide {
    background-position: center;
    background-size: cover;
    width: 300px;
    height: 300px;
}

.swiper-slide img {
    display: block;
    border: 8px solid #fff;
    margin: 0 auto;
    max-height: 300px;
    max-width: 300px;
}

.swiper-pagination {
    padding: 10px 15px;
    background-color: #fff;
    border-top: 1px solid #c1c1c1;
    border-bottom: 1px solid #c1c1c1;
    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    
    &.single {
        position: relative;
        border-left: 1px solid #c1c1c1;
        border-right:1px solid #c1c1c1;
        z-index: 99999999;
        margin-bottom:-30px;
    }
}

/* Breadcrumbs */


.breadcrumbs {
    margin: 0;
    background-color: #fff;
    padding: 10px 0;
    border-bottom:1px solid #c1c1c1;
}

a {
    color: #000;
}

.breadcrumbs__list {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.breadcrumbs__item {
    display: inline-block;
}

.breadcrumbs__item:first-of-type {
    padding-left: 0;
}

.breadcrumbs__item:not(:last-child):after {
    content: '/';
    display: inline-block;
    margin: 0 .20em;
    position: relative;
    vertical-align: middle;
    padding: 0 4px;
}

.breadcrumbs__link {
    text-decoration: underline;
}

.breadcrumbs__link[aria-current="page"] {
    color: inherit;
    font-weight: normal;
    text-decoration: none;
}

.breadcrumbs__link[aria-current="page"]:hover,
.breadcrumbs__link[aria-current="page"]:focus {
    text-decoration: underline;
}

.pagination {
    margin: 10px 0;
    padding: 15px 0;
    background-color: #fff;
    font-size: 20px;
    color: #fff;
    text-align: center;
    
    a, .deco, .current {
        padding: 4px 8px;
        margin: 0 5px;
        background-color: #222;
        color: #fff;
        border-radius: 4px;
        text-decoration: none;
    }
}

.water-mark {
    position: absolute;
    bottom: 30px;
    right: 30px;
    z-index: 999;
    color: #fff;
    opacity: 0.3;
    font-size:6em;
}

@keyframes rotateAnimation {
    from {transform: rotateY(45deg);}
    to {transform: rotateY(225deg);}
}

@keyframes pulse {
    from { transform: scale(1.0); }
    to { transform: scale(1.1); }
}