/* CSS stykes go in here */

* {
    box-sizing: border-box;
}

body {
    margin: 0;
    padding: 0;
    font-family: 'Open Sans', sans-serif;
    background-color: #f7f7f7;
}

img {
    max-width: 100%;
    height: auto;
}

header {
    background-color: #fff;
    padding-top: 15px;
}

header .logo {
    display: inline-block;
}

header .logo img {
    width: auto;
    height: 55px;
}

header form {
    position: relative;
    left: 45px;
    top: -15px;
    display: inline-block;
    max-width: 500px;
    width: 100%;
}

header form input[type=search] {
    font-size: 16px;
    color: #222;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    border-radius: 4px;
    max-width: 450px;
    width: 100%;
    padding: 8px 10px;
    border: 1px solid #c1c1c1;
}

header .search-btn {
    font-size: 16px;
    vertical-align: middle;
    background: transparent;
    color: #000;
    border: none;
}

header nav {
    padding: 15px 0;
    background-color: #222;
    text-transform: uppercase;
    font-size: 20px;
}

header nav ul {
    margin: 0;
    padding: 0;
}

header nav li {
    margin: 0 15px;
    display: inline-block;
    vertical-align: top;
    
    &:first-of-type {
        margin-left: 0;
    }
    
    &:last-of-type {
        margin-right: 0;
    }
}

header nav a {
    color: #fff;
    text-decoration: none;
}

.container {
    max-width: 1170px;
    margin: 0 auto;
}


/* Products */

.product-item {
    text-align: center;
    
    .product-collections {
        font-size: 12px;
        margin-bottom: 5px;
    }
    
    .product-image {
        width: 300px;
        height: 300px;
        align-items: center;
        display: flex;
        justify-content: center;
        img {
            border: 4px solid #fff;
            max-height: 300px;
        }
    }
    .product-title {
        margin: 0;
        font-weight: normal;
        
        a {
            color: #000;
            text-decoration: none;
        }
    }
    
    .product-price {
        font-size: 14px;
        margin-top: 5px;
    }
    
    &:hover {
        .btn {
            transform:scale(1);
        }
    }
    
    .btn {
        transform:scale(0);
        display: block;
        background-color: #3bb54a;
        color: #fff;
        text-decoration: none;
        padding: 8px 12px;
        border-radius: 4px;
    }
}



/* Grid */

.grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 1fr;
    grid-column-gap: 15px;
    grid-row-gap: 15px;
}

.grid-half {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: 1fr;
    grid-column-gap: 15px;
    grid-row-gap: 15px;
}


/* Swiper */

.swiper {
    width: 100%;
    padding-top: 50px;
    padding-bottom: 90px;
}

.swiper-slide {
    background-position: center;
    background-size: cover;
    width: 300px;
    height: 300px;
}

.swiper-slide img {
    display: block;
    border: 8px solid #fff;
    margin: 0 auto;
    max-height: 300px;
    max-width: 300px;
}

.swiper-pagination {
    padding: 10px 15px;
    background-color: #fff;
}

/* Breadcrumbs */


.breadcrumbs {
    margin: 0 0 2em;
    background-color: #fff;
    padding: 2em 0;
  }

  .breadcrumbs__list {
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  .breadcrumbs__item {
    display: inline-block;
    padding: 0 10px;
  }

  .breadcrumbs__item:first-of-type {
      padding-left: 0;
  }

  .breadcrumbs__item:not(:last-child):after {
    border-style: solid;
    border-width: .10em .10em 0 0;
    content: '';
    display: inline-block;
    height: .20em;
    margin: 0 .20em;
    position: relative;
    transform: rotate(45deg);
    vertical-align: middle;
    width: .20em;
  }

  .breadcrumbs__link {
    text-decoration: underline;
  }

  .breadcrumbs__link[aria-current="page"] {
    color: inherit;
    font-weight: normal;
    text-decoration: none;
  }

  .breadcrumbs__link[aria-current="page"]:hover,
  .breadcrumbs__link[aria-current="page"]:focus {
    text-decoration: underline;
  }