/* CSS stykes go in here */

body {
    margin: 0;
    padding: 0;
    font-family: 'Open Sans', sans-serif;
}

img {
    max-width: 100%;
    height: auto;
}

header {
    background-color: #fff;
    padding: 15px 0;
}

header .logo {
    display: inline-block;
}

header .logo img {
    width: auto;
    height: 55px;
}

header form {
    position: relative;
    left: 45px;
    top: -15px;
    display: inline-block;
    max-width: 500px;
    width: 100%;
}

header form input[type=search] {
    font-size: 16px;
    color: #222;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    border-radius: 4px;
    max-width: 450px;
    width: 100%;
    padding: 8px 10px;
    border: 1px solid #c1c1c1;
}

header .search-btn {
    font-size: 16px;
    vertical-align: middle;
    background: transparent;
    color: #000;
    border: none;
}

header nav {
    padding: 15px 0;
    background-color: #222;
    text-transform: uppercase;
    font-size: 20px;
}

header nav ul {
    margin: 0;
    padding: 0;
}

header nav li {
    margin: 0 15px;
    display: inline-block;
    vertical-align: top;
    
    &:first-of-type {
        margin-left: 0;
    }
    
    &:last-of-type {
        margin-right: 0;
    }
}

header nav a {
    color: #fff;
    text-decoration: none;
}

.container {
    max-width: 1170px;
    margin: 0 auto;
}



/* Grid */

.grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 1fr;
    grid-column-gap: 15px;
    grid-row-gap: 15px;
}